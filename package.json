{
  "name": "riminder",
  "productName": "Riminder",
  "version": "1.0.0",
  "description": "A desktop app for riminder",
  "homepage": "https://riminder.net",
  "author": {
    "name": "Alexandre.G",
    "email": "contact@riminder.net"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "build --dir",
    "dist": "build"
  },
  "build" : {
    "appId": "com.riminder.riminderApp",
    "dmg": {
      "contents": [
        {
        "x": 110,
        "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/app"
        }
      ]
    },
    "linux": {
       "target": [
         "deb"
       ],
       "icon": "build/linux",
       "maintainer": "Riminder",
       "category": "Office"
     },
     "win": {
       "target": "squirrel",
       "icon": "build/icon.ico"
     }
  },
  "author": "Riminder",
  "license": "ISC",
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.10.0",
    "electron-installer-debian": "^0.8.1",
    "electron-installer-dmg": "^0.2.1",
    "electron-log": "^2.2.14",
    "electron-packager": "^12.0.1",
    "mkdir-recursive": "^0.4.0"
  },
  "dependencies": {
    "electron-log": "^2.2.14",
    "mkdir-recursive": "^0.4.0"
  }
}
