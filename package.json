{
  "name": "riminder",
  "productName": "Riminder",
  "version": "1.0.0",
  "description": "A desktop app for riminder",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package-linux": "electron-packager . riminder --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "package-macos": "electron-packager . riminder --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "create-deb-installer": "electron-installer-debian --src release-builds/riminder-linux-x64 --arch amd64 --config ./installers/debian/inst_debian.json",
    "create-mac-installer": "electron-installer-dmg ./release-builds/riminder-darwin-x64/riminder.app riminderApp --out=release-builds --overwrite --icon=assets/icons/mac/icon.icns",
  },
  "author": "Riminder",
  "license": "ISC",
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-installer-debian": "^0.8.1",
    "electron-installer-dmg": "^0.2.1",
    "electron-log": "^2.2.14",
    "electron-packager": "^12.0.1",
    "mkdir-recursive": "^0.4.0"
  },
  "dependencies": {
    "electron-log": "^2.2.14",
    "mkdir-recursive": "^0.4.0"
  }
}
