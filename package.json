{
  "name": "riminder",
  "productName": "Riminder",
  "version": "1.0.2",
  "description": "A desktop app for riminder",
  "homepage": "https://riminder.net",
  "author": {
    "name": "Alexandre.G",
    "email": "contact@riminder.net"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "build --dir",
    "dist": "build",
    "releaseMac": "bash scripts/releaseMac.sh"
  },
  "build" : {
    "appId": "net.riminder.riminder",
    "mac": {
      "category": "public.app-category.business",
      "target": [
          "mas",
          "dmg"
      ],
      "icon": "build/mac/icon.icns",
      "entitlements": "build/mac/entitlements.mac.plist",
      "type": "distribution"
    },
    "mas": {
      "entitlements": "build/mac/entitlements.mas.plist"
    },
    "linux": {
       "target": [
         "deb",
         "snap"
       ],
       "icon": "build/linux",
       "maintainer": "Riminder",
       "category": "Office"
     },
     "snap": {

     },
     "win": {
       "target": "appx",
       "icon": "build/win/icon.ico"
     },
  	 "appx": {
  		   "publisher": "CN=A395C044-044E-4CE8-B866-140C81E23AD1",
  		   "identityName": "Riminder.riminder",
  		   "publisherDisplayName": "Riminder",
  		   "languages": [
  			"fr-fr"
  		   ]
  	 }
  },
  "author": "Riminder",
  "license": "ISC",
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.10.0",
    "electron-log": "^2.2.14",
    "electron-packager": "^12.0.1",
    "electron-pdf-window": "^1.0.12",
    "mkdir-recursive": "^0.4.0"
  },
  "dependencies": {
    "electron-pdf-window": "^1.0.12",
    "electron-log": "^2.2.14",
    "jquery": "^3.3.1",
    "mkdir-recursive": "^0.4.0"
  }
}
