{
  "name": "riminder",
  "productName": "Riminder",
  "version": "1.0.4",
  "description": "A desktop app for riminder",
  "homepage": "https://riminder.net",
  "author": "Riminder",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "mocha",
    "pack": "build --dir",
    "dist": "build",
    "releaseMac": "bash scripts/releaseMac.sh"
  },
  "build": {
    "appId": "net.riminder.riminder",
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "mas"
      ],
      "icon": "build/mac/icon.iconset",
      "entitlements": "build/mac/entitlements.mac.plist",
      "type": "distribution"
    },
    "mas": {
      "entitlements": "build/mac/entitlements.mas.plist"
    },
    "linux": {
      "target": [
        "deb",
        "snap"
      ],
      "icon": "build/linux",
      "maintainer": "Riminder",
      "category": "Office"
    },
    "snap": {},
    "win": {
      "target": "appx",
      "icon": "build/win/icon.ico"
    },
    "appx": {
      "publisher": "CN=A395C044-044E-4CE8-B866-140C81E23AD1",
      "identityName": "Riminder.riminder",
      "publisherDisplayName": "Riminder",
      "languages": [
        "fr-fr"
      ]
    }
  },
  "license": "ISC",
  "devDependencies": {
    "better-assert": "^1.0.2",
    "electron": "^15.5.5",
    "electron-builder": "^20.10.0",
    "electron-log": "^2.2.14",
    "electron-packager": "^12.0.1",
    "mkdir-recursive": "^0.4.0",
    "mocha": "^5.1.1"
  },
  "dependencies": {
    "deep-extend": "^0.6.0",
    "electron-log": "^2.2.14",
    "electron-pdf-window": "^1.0.12",
    "electron-version": "^2.0.1",
    "jquery": "^3.3.1",
    "mkdir-recursive": "^0.4.0"
  }
}
